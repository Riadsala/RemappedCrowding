function pregennoise = GenerateNoiseFrames(params, stim, targetSide, isSaccade, stimuliScrn)

nNoise = 10;

for ii = 1:nNoise
    stimNoise = stim;
     for boxPosition = 1:4
        noise =  repmat(127 + params.noiseMaskStd * randn(params.boxN), [1 1 3]);
        stimNoise = drawItem2Box(stimNoise, noise, 1, boxPosition, params);
        noise =  repmat(127 + params.noiseMaskStd * randn(params.boxN), [1 1 3]);
        stimNoise = drawItem2Box(stimNoise, noise, -1, boxPosition, params);
    end
    clear noise
    stimNoise = drawAllBoxes(stimNoise, params, isSaccade, targetSide);
    
    pregennoise(ii).tex = Screen('MakeTexture', stimuliScrn, stimNoise);
end